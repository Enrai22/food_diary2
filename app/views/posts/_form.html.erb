<%= form_with(model: post, local: true) do |form| %>
<div class="main posts-new">
  <div class="container">
    <div class="form-heading">
      <% if post.new_record? %>
        <p>新規投稿</p>
      <% else %>
        <p>編集</p>
      <% end %>
      </div>
      <div class="form">
        <div class="form-body">
          <% if post.errors.any? %>
            <div class="form-error">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
              <ul>
                <% post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= form.label :title,"料理名" %>
            <%= form.text_field :title %>
          </div>

          <div class="field">
            <%= form.label :category,"カテゴリー" %>
            <%= form.text_field :category %>
          </div>

          <div class="field">
            <%= form.label :image,"画像" %>
            <%= form.file_field :image, class:"image" %>
          </div>

          <div class="field">
            <%= form.label :content,"詳細" %>
            <%= form.text_area :content %>
          </div>

          <div class="field">
            <%= form.label :rate_deli,"美味しさ" %>
            <%= form.text_field :rate_deli %>
          </div>

          <div class="field">
            <%= form.label :rate_acc,"アクセス" %>
            <%= form.text_field :rate_acc %>
          </div>

          <div class="field">
            <%= form.label :rate_rep,"リピートしたいか" %>
            <%= form.text_field :rate_rep %>
          </div>

          <div class="field">
            <%= form.label :rate_cost,"コスパ" %>
            <%= form.text_field :rate_cost %>
          </div>

          <div class="actions">
            <%= form.submit "投稿" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
