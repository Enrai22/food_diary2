<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>Category</th>
      <th>User</th>
      <th>Rate deli</th>
      <th>Rate acc</th>
      <th>Rate rep</th>
      <th>Rate cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= post.category %></td>
        <td><%= post.user_id %></td>
        <td><%= post.rate_deli %></td>
        <td><%= post.rate_acc %></td>
        <td><%= post.rate_rep %></td>
        <td><%= post.rate_cost %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
